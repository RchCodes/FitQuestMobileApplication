<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permissions -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FitQuest"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitQuest">
        <activity
            android:name=".GearActivity"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Account Creation Activity -->
        <activity
            android:name=".AccountCreation"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" /> <!-- Avatar Creation Activity -->
        <activity
            android:name=".AvatarCreationActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"></activity> <!-- Exercise Tracking Activity -->
        <activity
            android:name=".ExerciseTrackingActivity"
            android:exported="false"
            android:theme="@style/Theme.FitQuest.NoActionBar" /> <!-- Settings Activity -->
        <activity
            android:name=".UserSettingsActivity"
            android:exported="false" /> <!-- Optional: Keep MainActivity if you use it for testing -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>
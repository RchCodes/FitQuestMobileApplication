<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Green background -->
    <solid android:color="#228B22" /> <!-- Forest Green -->

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Yellow stroke -->
    <stroke
        android:width="2dp"
        android:color="#FFD700" /> <!-- Gold -->

    <!-- Padding inside -->
    <padding
        android:left="6dp"
        android:top="2dp"
        android:right="6dp"
        android:bottom="2dp" />
</shape>

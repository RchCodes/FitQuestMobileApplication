<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When pressed or focused -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6F0FF"/> <!-- lighter blue -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#4A6FB0"/> <!-- brighter border -->
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6F0FF"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#4A6FB0"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D6E3F3"/> <!-- normal light blue -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#2E3A59"/> <!-- dark border -->
        </shape>
    </item>
</selector>

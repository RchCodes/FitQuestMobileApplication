<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow (pressed, closer/darker) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#b8860b"/> <!-- darker brown shadow -->
                    <corners android:radius="6dp"/>
                </shape>
            </item>

            <!-- Foreground (slightly shifted down for 3D effect) -->
            <item android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#d4a017"/> <!-- darker gold when pressed -->
                    <corners android:radius="6dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#b8860b"/> <!-- shadow color -->
                    <corners android:radius="6dp"/>
                </shape>
            </item>

            <!-- Foreground (slightly raised for 3D effect) -->
            <item android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#f4c542"/> <!-- gold -->
                    <corners android:radius="6dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

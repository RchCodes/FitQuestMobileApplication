<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft glow behind the item -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/> <!-- Transparent base -->
            <corners android:radius="12dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
            <gradient
                android:startColor="#80FFD600"
            android:endColor="#00FFD600"
            android:angle="270"/>
        </shape>
    </item>

    <!-- Main background -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFDE7"/> <!-- Light yellow -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#FFD600"/> <!-- Border -->
        </shape>
    </item>

</layer-list>

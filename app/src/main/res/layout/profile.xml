<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"> <!-- semi-transparent dim -->

    <!-- Scrollable profile card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/profile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_profile_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="6dp">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Profile Picture & Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/user"
                    android:background="@color/cardview_dark_background"
                    android:contentDescription="Profile Picture"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLAYER"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/classView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CLASS"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="LV. 1"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <FrameLayout
                    android:id="@+id/expContainer"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@drawable/progress_bg"
                        android:padding="2dp"> <!-- padding ensures ProgressBar is smaller than border -->

                        <ProgressBar
                            android:id="@+id/exp_bar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="50"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_fill"
                            android:clipToPadding="false"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="140dp"
                        android:layout_height="12dp"
                        android:gravity="center"
                        android:text="50/100"
                        android:textColor="#FFFFFF"
                        android:textSize="8dp" />
                </FrameLayout>
            </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Level & EXP -->

            <TextView
                android:id="@+id/player_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="ID: 16976531"
                android:textColor="@android:color/black" />

            <!-- Rank -->
            <TextView
                android:id="@+id/current_rank_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Rank:"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/rank_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rank_novice"
                android:layout_marginTop="4dp"
                android:contentDescription="Rank Icon"/>

            <TextView
                android:id="@+id/rank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novice"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_purple"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"/>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/bind_button"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Bind Account"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/button_style"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/switch_button"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Switch Account"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/button_style"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Close button overlaid on top-right -->
    <ImageButton
        android:id="@+id/btn_close_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        android:contentDescription="Close Profile"/>

</FrameLayout>

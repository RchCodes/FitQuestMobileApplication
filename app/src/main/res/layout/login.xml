<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:padding="24dp">

    <!-- Username -->
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edittext_bg"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#444" />

    <!-- Password -->
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/edit_username"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#444" />

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edit_password"
        android:layout_marginTop="6dp"
        android:text="Forgot Password?"
        android:textSize="12sp"
        android:textColor="#444" />

    <!-- LOGIN button -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_forgot_password"
        android:layout_centerHorizontal="true"
        android:text="LOGIN"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:backgroundTint="@null"
        android:background="@drawable/button_style"
        android:layout_marginTop="12dp" />

    <!-- Divider line -->
    <View
        android:id="@+id/divider_line"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_below="@id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#444" />

    <!-- LOGIN VIA text -->
    <TextView
        android:id="@+id/text_login_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="LOGIN VIA"
        android:textSize="12sp"
        android:textColor="#444" />

    <!-- Facebook + Google Row -->
    <LinearLayout
        android:id="@+id/social_login_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_login_via"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/fb_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/fb_icon2"
            android:contentDescription="Login with Facebook"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/google_icon2"
            android:contentDescription="Login with Google"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- SIGN UP button -->
    <Button
        android:id="@+id/button_signup"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/social_login_row"
        android:layout_centerHorizontal="true"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:backgroundTint="@null"
        android:background="@drawable/button_style"
        android:layout_marginTop="16dp"/>

    <!-- ðŸ”¹ Progress Overlay -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleLarge" />
    </FrameLayout>

</RelativeLayout>

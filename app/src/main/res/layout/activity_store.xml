<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreActivity">

    <FrameLayout
        android:id="@+id/charSectionBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/storeLogo"
        android:background="@drawable/bg_store_charsec"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4sp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/bg_right_panel_target">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginRight="4sp"
            android:src="@drawable/currency"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/txtCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999M"
            android:textColor="#FFD700"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Currency Display -->

    <!-- Character & Item Dialog -->

    <!-- Store Logo -->
    <FrameLayout
        android:id="@+id/characterDialogSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:layout_constraintBottom_toTopOf="@+id/storeSection">

        <!-- Character stacked with stand -->
        <FrameLayout
            android:id="@+id/characterContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp">

            <!-- Stand below character -->
            <ImageView
                android:id="@+id/imgStand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:src="@drawable/ic_stand" />

            <!-- Character Preview (layers) -->
            <FrameLayout
                android:id="@+id/imgCharacter"
                android:layout_width="160dp"
                android:layout_height="260dp"
                android:layout_marginLeft="10sp"
                android:layout_gravity="bottom|center">

                <ImageView
                    android:id="@+id/baseBodyLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/body_male" />

                <ImageView
                    android:id="@+id/outfitLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outfit_male_warrior" />

                <ImageView
                    android:id="@+id/weaponLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/hairFillLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/hairOutlineLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/eyesFillLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/eyesOutlineLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/noseLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/lipsLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </FrameLayout>

        <!-- Item Details Box -->
        <LinearLayout
            android:id="@+id/itemDetails"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_item_desc"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="28dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <!-- FIX: wrap all text views inside a LinearLayout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WELCOME TO STORE"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itemDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Buy the item you want!"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/itemBoosts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="#111111"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/itemSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="#111111"
                        android:textSize="14sp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/button_buy"
            android:layout_gravity="bottom|end"/>
    </FrameLayout>

    <!-- Parent container for tabs + grid -->
    <LinearLayout
        android:id="@+id/storeSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_store"
        app:layout_constraintTop_toTopOf="@id/storeLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Store Tabs -->
        <LinearLayout
            android:id="@+id/tabScroll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="25sp"
            android:gravity="center">

            <ImageView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store_all"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/tabWeapons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store_weapon"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/tabArmor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store_armor"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/tabLeggings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store_pants"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/tabBoots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store_boots"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/tabNecklace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store_accessory"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <!-- Store Grid -->
        <GridView
            android:id="@+id/gridStore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:horizontalSpacing="10dp"
            android:numColumns="4"
            android:padding="10dp"
            android:verticalSpacing="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/storeLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_store_logo"
        app:layout_constraintTop_toBottomOf="@id/characterDialogSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

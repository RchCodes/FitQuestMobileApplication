<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exercise_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <!-- Pose Overlay for Joint Visualization -->
    <com.example.fitquest.PoseOverlayView
        android:id="@+id/poseOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Permission Request Button (overlay) -->
    <LinearLayout
        android:id="@+id/permission_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#80000000"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permissions Required"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera and microphone access are needed for tracking and voice control"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <Button
            android:id="@+id/request_permission_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant Permissions"
            android:textSize="16sp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Exercise Instructions (top center) -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Instructions"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#80000000"
        android:padding="12dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="16dp"
        android:maxWidth="300dp"
        android:gravity="center" />

    <!-- Rep Counter (top-right) -->
    <TextView
        android:id="@+id/repCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reps: 0/10"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#80000000"
        android:padding="10dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Timer Display (for plank, below rep counter) -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plank Time: 0s"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#80000000"
        android:padding="10dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"/>

    <!-- Feedback Text (bottom center) -->
    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to start!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#80000000"
        android:padding="12dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:maxWidth="300dp"
        android:gravity="center" />

</FrameLayout>

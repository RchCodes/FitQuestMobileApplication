<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_avatar_overview"
    android:padding="12dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/button_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalCenterLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.43" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd"
        android:text="AVATAR OVERVIEW"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Physique Section -->
    <LinearLayout
        android:id="@+id/layoutStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/verticalCenterLine"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvPhysique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHYSIQUE"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:id="@+id/layoutPhysique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Each physique row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arms"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Arms"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:id="@+id/txt_arms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_legs"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Legs"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/txt_legs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_chest"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Chest"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/txt_chest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_back"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/txt_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/attributes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATTRIBUTES"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

        <!-- Strength -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_strength"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_strength"
                android:contentDescription="Strength Icon"/>

            <TextView
                android:id="@+id/txt_strength_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Strength"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/txt_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <!-- Endurance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_endurance"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_endurance"
                android:contentDescription="Endurance Icon"/>

            <TextView
                android:id="@+id/txt_endurance_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Endurance"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/txt_endurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <!-- Agility -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_agility"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_agility"
                android:contentDescription="Agility Icon"/>

            <TextView
                android:id="@+id/txt_agility_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Agility"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/txt_agility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <!-- Flexibility -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_flexibility"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_flexibility"
                android:contentDescription="Flexibility Icon"/>

            <TextView
                android:id="@+id/txt_flexibility_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Flexibility"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/txt_flexibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <!-- Stamina -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_stamina"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_stamina"
                android:contentDescription="Stamina Icon"/>

            <TextView
                android:id="@+id/txt_stamina_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stamina"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/txt_stamina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

    </LinearLayout>


    <!-- Character Info (Name, Level, Class, HP, AP) -->
    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/verticalCenterLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHIAN"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="start"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv. 99"
                android:textColor="#FFF"/>

            <TextView
                android:id="@+id/tvClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Fighter"
                android:textColor="#FFF"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/expFrame"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@drawable/progress_bg"
            android:padding="2dp">

            <!-- The actual progress fill -->
            <ProgressBar
                android:id="@+id/exp_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/progress_fill"
                android:clipToPadding="false"/>

            <!-- Overlay numeric progress centered on the bar -->
            <TextView
                android:id="@+id/exp_text_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="50/100"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:includeFontPadding="false"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EXP"
            android:textColor="#FFF"
            android:layout_gravity="start"/>


    </LinearLayout>

    <!-- Avatar Image -->
    <FrameLayout
        android:id="@+id/ivAvatar"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutInfo"
        app:layout_constraintBottom_toTopOf="@id/activeSkillsLayout"
        app:layout_constraintStart_toStartOf="@+id/verticalCenterLine"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/baseBodyLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/body_male"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/outfitLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/weaponLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/hairFillLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/hairOutlineLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/eyesFillLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/eyesOutlineLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/noseLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/lipsLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/activeSkillsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutStats"
        app:layout_constraintStart_toStartOf="parent">

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <!-- Active Skills -->
                <TextView
                    android:id="@+id/tvActiveSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Skills"
                    android:textStyle="bold"
                    android:textColor="#FFF"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/skill1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundImage"
                    app:strokeColor="#FFD700"
                    app:strokeWidth="2.5dp"
                    android:src="@drawable/ic_warrior_skill_1"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/skill2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundImage"
                    app:strokeColor="#FFD700"
                    app:strokeWidth="2.5dp"
                    android:src="@drawable/ic_warrior_skill_2"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/skill3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundImage"
                    app:strokeColor="#FFD700"
                    app:strokeWidth="2.5dp"
                    android:src="@drawable/ic_warrior_skill_3"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/skill4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundImage"
                    app:strokeColor="#FFD700"
                    app:strokeWidth="2.5dp"
                    android:src="@drawable/ic_warrior_skill_4"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/skill5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundImage"
                    app:strokeColor="#FFD700"
                    app:strokeWidth="2.5dp"
                    android:src="@drawable/ic_warrior_skill_5"/>

            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/passiveSkillsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/activeSkillsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Passive Skills -->
        <TextView
            android:id="@+id/tvPassiveSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passive Skills"
            android:textStyle="bold"
            android:textColor="#FFF"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/passive1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundImage"
            app:strokeColor="#FFD700"
            app:strokeWidth="2.5dp"
            android:src="@drawable/ic_warrior_passive_1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/passive2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundImage"
            app:strokeColor="#FFD700"
            app:strokeWidth="2.5dp"
            android:src="@drawable/ic_warrior_passive_2"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/skillLoadout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/button_loadout"
        app:layout_constraintTop_toBottomOf="@+id/passiveSkillsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

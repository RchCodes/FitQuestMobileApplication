<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_avatar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top row: CLASS buttons on the left + Avatar on the right -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <!-- CLASS column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingEnd="8dp"
                android:layout_marginTop="70dp">

                <TextView
                    android:id="@+id/class_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="CLASS:"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Class options -->
                <ImageView
                    android:id="@+id/btn_warrior"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:src="@drawable/class_warrior"
                    android:contentDescription="Warrior Class"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/btn_rogue"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:src="@drawable/class_rouge"
                    android:contentDescription="Rogue Class"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/btn_tank"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:src="@drawable/class_tank"
                    android:contentDescription="Tank Class"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <!-- Gender icons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:id="@+id/male_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/male_icon"
                        android:contentDescription="Male"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="20dp" />

                    <ImageView
                        android:id="@+id/female_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/female_icon"
                        android:contentDescription="Female"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- Avatar stack with Username field above -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Username input -->
                <EditText
                    android:id="@+id/edit_avatar_username"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:hint="Enter Username"
                    android:background="@drawable/edittext_bg"
                    android:padding="8dp"
                    android:textColor="#000"
                    android:textColorHint="#666"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"/>

                <!-- Avatar preview (layers) -->
                <FrameLayout
                    android:id="@+id/avatar_frame"
                    android:layout_width="180dp"
                    android:layout_height="280dp"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/baseBody"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/male2"
                        android:contentDescription="Base body"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/hairLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Hair overlay"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/eyesLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Eyes overlay"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/noseLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Nose overlay"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/lipsLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Lips overlay"
                        android:scaleType="fitCenter" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/tab_hair"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/creation_hair"
                android:contentDescription="Hair Tab"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/tab_eyes"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/creation_eyes"
                android:contentDescription="Eyes Tab"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/tab_nose"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/creation_nose"
                android:contentDescription="Nose Tab"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/tab_lips"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/creation_lips"
                android:contentDescription="Lips Tab"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <!-- RecyclerView container (replaces multiple GridLayouts) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:overScrollMode="never" />

        <!-- CREATE button -->
        <ImageView
            android:id="@+id/btn_create"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:src="@drawable/button_create"
            android:contentDescription="Create"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>

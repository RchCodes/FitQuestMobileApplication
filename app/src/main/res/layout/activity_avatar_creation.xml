<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_avatar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top row: CLASS buttons on the left + Avatar on the right -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <!-- CLASS column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingEnd="8dp"
                android:layout_marginTop="70dp">

                <TextView
                    android:id="@+id/class_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="CLASS:"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_warrior"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:src="@drawable/class_warrior"
                    android:contentDescription="Warrior Class"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/btn_rogue"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:src="@drawable/class_rouge"
                    android:contentDescription="Rogue Class"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/btn_tank"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:src="@drawable/class_tank"
                    android:contentDescription="Tank Class"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <!-- Gender icons under avatar -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:id="@+id/male_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/male_icon"
                        android:contentDescription="Male"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="20dp" />

                    <ImageView
                        android:id="@+id/female_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/female_icon"
                        android:contentDescription="Female"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- Avatar stack -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Frame for layered avatar images -->
                <FrameLayout
                    android:id="@+id/avatar_frame"
                    android:layout_width="220dp"
                    android:layout_height="340dp"
                    android:foregroundGravity="center">

                    <!-- base body -->
                    <ImageView
                        android:id="@+id/baseBody"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/male2"
                        android:contentDescription="Base body"
                        android:scaleType="fitCenter" />

                    <!-- Layers (initially empty src; will be set by Java) -->
                    <ImageView
                        android:id="@+id/headLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Head overlay"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/hairLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Hair overlay"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/eyesLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Eyes overlay"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/noseLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Nose overlay"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/lipsLayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Lips overlay"
                        android:scaleType="fitCenter" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- TABS (HEAD / HAIR / EYES / NOSE / LIPS) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tab_head"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:src="@drawable/creation_head"
                    android:contentDescription="Head Grid"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/tab_hair"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:src="@drawable/creation_hair"
                    android:contentDescription="Hair Grid"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/tab_eyes"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:src="@drawable/creation_eyes"
                    android:contentDescription="Eyes Grid"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/tab_nose"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:src="@drawable/creation_nose"
                    android:contentDescription="Eyes Grid"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/tab_lips"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:src="@drawable/creation_lips"
                    android:contentDescription="Lips Grid"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Grid of customization icons (fixed-size cells so layout stays neat) -->
        <GridLayout
            android:id="@+id/grid_head_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2"
            android:orientation="horizontal"
            android:useDefaultMargins="true"
            android:layout_marginTop="10dp">

            <!-- each included item should have a root that accepts the width/height provided here (e.g. ImageButton match_parent) -->
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_1" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_2" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_3" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_4" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_5" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_6" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_7" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_8" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_9" />
            <include layout="@layout/item_customization_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/head_icon_10" />
        </GridLayout>

        <!-- (You can reuse the same GridLayout pattern for HAIR / EYES / NOSE / LIPS by swapping visibility in Java) -->

        <!-- CREATE button -->
        <ImageView
            android:id="@+id/btn_create"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:src="@drawable/button_create"
            android:contentDescription="Create"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>

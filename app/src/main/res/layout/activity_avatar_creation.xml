<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- Username Label -->
    <TextView
        android:id="@+id/tvUsernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etUsername"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="55dp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvUsernameLabel"
        android:layout_alignStart="@+id/imgCharacter"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_username_edittext_target"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:singleLine="true" />

    <!-- Character Image -->
    <ImageView
        android:id="@+id/imgCharacter"
        android:layout_width="220dp"
        android:layout_height="378dp"
        android:layout_below="@id/etUsername"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:src="@drawable/char_warrior" />

    <!-- Right Panel (Class, Gender, Customization) -->
    <LinearLayout
        android:id="@+id/rightPanel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:background="@drawable/bg_right_panel_target"
        android:padding="10dp">

        <!-- Class Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLASS"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnWarrior"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/icon_warrior"
            android:text="WARRIOR"
            android:textSize="11dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:background="@drawable/bg_btn_warrior_selector" />

        <Button
            android:id="@+id/btnRogue"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/icon_rogue"
            android:text="ROGUE"
            android:textSize="11dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:background="@drawable/bg_btn_rogue" />

        <Button
            android:id="@+id/btnTank"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/icon_tank"
            android:text="TANK"
            android:textSize="11dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:background="@drawable/bg_btn_tank" />

        <!-- Gender Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENDER"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/btnMale"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_male"
                app:backgroundTint="@null"
                android:background="@drawable/bg_btn_gender_male"
                android:padding="8dp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnFemale"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_female"
                app:backgroundTint="@null"
                android:background="@drawable/bg_btn_gender_female"
                android:padding="8dp" />
        </LinearLayout>


        <!-- Customization Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <!-- Hair -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnHairLeft"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tvHair"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hair #1"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnHairRight"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Eyes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnEyesLeft"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tvEyes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Eyes #1"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnEyesRight"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Nose -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnNoseLeft"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tvNose"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nose #1"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnNoseRight"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Lips -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnLipsLeft"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/tvLips"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Lips #1"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnLipsRight"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Create Button -->
    <Button
        android:id="@+id/btnCreate"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="CREATE"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:backgroundTint="@null"
        android:background="@drawable/button_style" />

</RelativeLayout>

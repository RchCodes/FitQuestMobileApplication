<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_arena">

    <!-- BACK BUTTON -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/button_back"
        android:scaleType="fitCenter"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- HEADER BACK PANEL -->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/banner_back_panel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RANK HOLDER -->
    <FrameLayout
        android:id="@+id/rank_holder"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/banner_rank_holder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/rank_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="top|center"
            android:src="@drawable/rank_novice"/>

        <TextView
            android:id="@+id/rank_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="24dp"
            android:text="CHAMPION"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </FrameLayout>

    <!-- ARENA TITLE -->
    <ImageView
        android:id="@+id/arena_title"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:padding="12dp"
        android:background="@drawable/banner_arena"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- AVATAR FRAME -->
    <FrameLayout
        android:id="@+id/avatar_frame"
        android:layout_width="220dp"
        android:layout_height="320dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/baseBodyLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/body_male"/>

        <ImageView
            android:id="@+id/outfitLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outfit_male_warrior"/>

        <ImageView
            android:id="@+id/weaponLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/hairFillLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/hairOutlineLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/eyesFillLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/eyesOutlineLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/noseLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/lipsLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <!-- NAME & LEVEL -->
    <LinearLayout
        android:id="@+id/name_level_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="@+id/avatar_frame"
        app:layout_constraintStart_toStartOf="@+id/avatar_frame"
        app:layout_constraintEnd_toEndOf="@+id/avatar_frame">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAYER"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lvl: 30"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:src="@drawable/ic_stand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="135dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FOOTER BUTTONS -->
    <LinearLayout
        android:id="@+id/footer_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/leaderboards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:background="@drawable/button_arena_leaderboards"/>

            <ImageButton
                android:id="@+id/battle_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:background="@drawable/button_battle_history"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/start_combat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_arena_fight"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_arena_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000"> <!-- Dim background -->

    <!-- POPUP CARD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:clipToPadding="false"
        android:padding="12dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFA500"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARENA"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- CONTENT -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:background="#FFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHIAN"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#1E3A8A"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/player_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV. 99"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <ImageView
                    android:id="@+id/avatar_image"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/male2"
                    android:background="@android:color/darker_gray"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/rank_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/highest_rank" />

                <TextView
                    android:id="@+id/rank_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHAMPION"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/start_combat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Combat"
                    android:backgroundTint="#FFA500"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>

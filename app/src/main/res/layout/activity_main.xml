<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.fitquest.MainActivity">

    <!-- PROFILE SECTION (Clickable) -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="#1F1F1F">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:background="#1F1F1F"
            android:contentDescription="User Icon"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHIAN"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/player_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV. 99"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- COINS (top-right) -->
    <TextView
        android:id="@+id/coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ’° 999M"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- EXP BAR -->
    <ProgressBar
        android:id="@+id/exp_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/profile_section"
        android:layout_marginTop="4dp"
        android:max="10000"
        android:progress="5000"
        android:progressDrawable="@android:color/holo_green_light" />

    <!-- CHARACTER VIEW -->
    <ImageView
        android:id="@+id/character_view"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:src="@drawable/male2"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"/>

    <!-- LEFT SIDE BUTTONS -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/stats_button"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="STATS" />

        <Button
            android:id="@+id/gear_button"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="GEAR"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/arena_button"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="ARENA"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- RIGHT SIDE BUTTONS -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/quest_button"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="QUEST" />

        <Button
            android:id="@+id/goals_button"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="GOALS"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/store_button"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="STORE"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/friends_button"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="FRIENDS"
            android:textSize="11dp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:text="SETTINGS"
            android:textSize="9dp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- CHALLENGE BUTTON -->
    <Button
        android:id="@+id/challenge_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="CHALLENGE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

</RelativeLayout>

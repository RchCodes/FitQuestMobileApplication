<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="12dp">

    <!-- PROFILE (top-left) -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#CC111111"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/user"
            android:contentDescription="User Icon"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHIAN"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/player_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV. 99"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- SETTINGS (top-right) -->
    <ImageView
        android:id="@+id/settings_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/b_settings"
        android:contentDescription="Settings"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"/>

    <!-- COINS badge (left of settings) -->
    <LinearLayout
        android:id="@+id/coins_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_right_panel_target"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@id/settings_button"
        app:layout_constraintTop_toTopOf="@id/settings_button"
        android:layout_marginEnd="12dp">

        <!-- Coin Icon -->
        <ImageView
            android:id="@+id/coin_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/currency"
            android:contentDescription="Coin Icon"
            android:layout_marginEnd="4dp"/>

        <!-- Coin Count -->
        <TextView
            android:id="@+id/coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999M"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>


    <!-- EXP bar under profile -->
    <ProgressBar
        android:id="@+id/exp_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="12dp"
        android:max="10000"
        android:progress="5000"
        android:progressTint="@android:color/holo_green_light"
        app:layout_constraintTop_toBottomOf="@id/profile_section"
        app:layout_constraintStart_toStartOf="@id/profile_section"
        android:layout_marginTop="6dp"/>

    <!-- Avatar layers stacked in FrameLayout -->
    <FrameLayout
        android:id="@+id/avatar_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/exp_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="254:457"
        app:layout_constraintBottom_toTopOf="@id/challenge_button">

        <ImageView
            android:id="@+id/baseBodyLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/body_male"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/outfitLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/weaponLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/hairFillLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/hairOutlineLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/eyesFillLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/eyesOutlineLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/noseLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/lipsLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </FrameLayout>


    <!-- LEFT vertical buttons -->
    <LinearLayout
        android:id="@+id/left_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView android:id="@+id/stats_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/b_stats2"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView android:id="@+id/gear_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/b_gear2"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView android:id="@+id/arena_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/b_arena"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- RIGHT vertical buttons -->
    <LinearLayout
        android:id="@+id/right_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView android:id="@+id/quest_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/b_quest2"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView android:id="@+id/goals_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/b_goal2"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView android:id="@+id/store_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/b_store2"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView android:id="@+id/friends_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/b_friends2"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- CHALLENGE button bottom-center -->
    <ImageView
        android:id="@+id/challenge_button"
        android:layout_width="180dp"
        android:layout_height="64dp"
        android:src="@drawable/b_challenge"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

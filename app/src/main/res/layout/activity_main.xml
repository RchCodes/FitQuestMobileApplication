<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="12dp">

    <!-- PROFILE (top-left) -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#CC111111"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/user"
            android:contentDescription="User Icon"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHIAN"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/player_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV. 99"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- SETTINGS (top-right) -->
    <ImageView
        android:id="@+id/settings_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/b_settings"
        android:contentDescription="Settings"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp" />

    <!-- COINS badge near top-right (left of settings) -->
    <TextView
        android:id="@+id/coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999M"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_alignTop="@id/settings_button"
        android:layout_toStartOf="@id/settings_button"
        android:layout_marginEnd="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

    <!-- EXP bar under profile -->
    <ProgressBar
        android:id="@+id/exp_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="12dp"
        android:layout_below="@id/profile_section"
        android:layout_marginTop="6dp"
        android:max="10000"
        android:progress="5000"
        android:progressTint="@android:color/holo_green_light" />

    <!-- CHARACTER (center area) -->
    <ImageView
        android:id="@+id/character_view"
        android:layout_width="220dp"
        android:layout_height="420dp"
        android:src="@drawable/male2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_below="@id/exp_bar"
        android:contentDescription="Character" />

    <!-- LEFT vertical icons (stacked, centered vertically) -->
    <LinearLayout
        android:id="@+id/left_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/stats_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/b_stats"
            android:contentDescription="Stats"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/gear_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/b_gear"
            android:contentDescription="Gear"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/arena_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/b_arena"
            android:contentDescription="Arena"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp" />
    </LinearLayout>

    <!-- RIGHT vertical icons (stacked, centered vertically) -->
    <LinearLayout
        android:id="@+id/right_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/quest_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/b_quest"
            android:contentDescription="Quest"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/goals_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/b_goal"
            android:contentDescription="Goals"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/store_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/b_store"
            android:contentDescription="Store"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/friends_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/b_friends"
            android:contentDescription="Friends"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp" />
    </LinearLayout>

    <!-- CHALLENGE (big, bottom center) -->
    <ImageView
        android:id="@+id/challenge_button"
        android:layout_width="180dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/b_challenge"
        android:contentDescription="Challenge"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>

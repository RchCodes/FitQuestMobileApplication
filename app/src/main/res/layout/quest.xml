<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/quest_background"
    android:elevation="12dp"
    android:layout_gravity="center"
    android:minWidth="350dp"
    android:maxWidth="400dp"
    android:clickable="false"
    android:focusable="false">

    <!-- Title Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/quest_header_background"
        android:padding="16dp"
        android:backgroundTint="@null">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUESTS"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete challenges to earn rewards!"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:alpha="0.8"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Tab Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/daily_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="DAILY"
            android:textSize="12sp"
            android:background="@drawable/tab_button_background"
            android:textColor="@android:color/white"
            android:backgroundTint="@null"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/weekly_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="WEEKLY"
            android:textSize="12sp"
            android:background="@drawable/tab_button_background"
            android:textColor="@android:color/white"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@null"/>

        <Button
            android:id="@+id/monthly_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/tab_button_background"
            android:text="MONTHLY"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:backgroundTint="@null"/>
    </LinearLayout>

    <!-- Quest List Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quest_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:background="@android:color/white"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        android:padding="12dp" />

</LinearLayout>

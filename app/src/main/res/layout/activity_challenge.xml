<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:anddroid="http://schemas.android.com/tools"
    android:background="@drawable/bg_desert_arena">



    <!-- PLAYER INFO -->
    <LinearLayout
        android:id="@+id/playerInfo"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_player_battle_info"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvPlayerName"
            android:text="Player"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <FrameLayout
            android:id="@+id/PlayerHpFrame"
            android:layout_width="match_parent"
            android:layout_marginTop="6sp"
            android:layout_height="12dp"
            android:background="@drawable/progress_bg"
            android:padding="2dp">

            <!-- The actual progress fill -->
            <ProgressBar
                android:id="@+id/player_hp_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/progress_fill"
                android:clipToPadding="false"/>

            <!-- Overlay numeric progress centered on the bar -->
            <TextView
                android:id="@+id/player_hp_text_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="50/100"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:includeFontPadding="false"/>
        </FrameLayout>

        <!-- Action BAR -->
        <ProgressBar
            android:id="@+id/playerActionBar"
            android:layout_marginTop="4sp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="50"
            android:max="100"
            android:progressDrawable="@drawable/progress_ab"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerStatusEffects"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/playerInfo"
        app:layout_constraintEnd_toEndOf="@+id/playerInfo"
        app:layout_constraintTop_toBottomOf="@+id/playerInfo">
    </LinearLayout>

    <!-- ENEMY INFO -->
    <LinearLayout
        android:id="@+id/enemyStatusEffects"
        android:layout_width="160dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/enemyInfo"
        app:layout_constraintEnd_toEndOf="@+id/enemyInfo"
        app:layout_constraintBottom_toTopOf="@+id/enemyInfo"/>

    <LinearLayout
        android:id="@+id/enemyInfo"
        android:orientation="vertical"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imgEnemy"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvEnemyName"
            android:text="Enemy"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <FrameLayout
            android:id="@+id/enemyHpFrame"
            android:layout_width="match_parent"
            android:layout_marginTop="6sp"
            android:layout_height="12dp"
            android:background="@drawable/progress_bg"
            android:padding="2dp">

            <!-- The actual progress fill -->
            <ProgressBar
                android:id="@+id/enemy_hp_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/progress_fill"
                android:clipToPadding="false"/>

            <!-- Overlay numeric progress centered on the bar -->
            <TextView
                android:id="@+id/enemy_hp_text_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="50/100"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:includeFontPadding="false"/>
        </FrameLayout>

        <!-- Action BAR -->
        <ProgressBar
            android:id="@+id/enemyActionBar"
            android:layout_marginTop="4sp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="50"
            android:max="100"
            android:progressDrawable="@drawable/progress_ab"/>
    </LinearLayout>

    <!-- PLAYER CHARACTER -->
    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stand2"
        app:layout_constraintBottom_toTopOf="@id/skillContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="65dp" />

    <FrameLayout
        android:id="@+id/imgPlayer"
        android:layout_width="130dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@id/skillContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="75dp">

        <ImageView
            android:id="@+id/baseBodyLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/body_male"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/outfitLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/weaponLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/hairFillLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/hairOutlineLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/eyesFillLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/eyesOutlineLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/noseLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/lipsLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

    </FrameLayout>

    <!-- ENEMY CHARACTER -->

    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stand2"
        app:layout_constraintBottom_toTopOf="@id/skillContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="110dp"/>

    <ImageView
        android:id="@+id/imgEnemy"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:src="@drawable/enemy_venopod"
        app:layout_constraintBottom_toTopOf="@id/skillContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"/>

    <FrameLayout
        android:id="@+id/effectsLayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >
        <!-- Player side animations (like damage text or buffs) -->
        <FrameLayout
            android:id="@+id/playerEffectLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="200dp"
            android:clipChildren="false"
            android:clipToPadding="false" />

        <!-- Enemy side animations -->
        <FrameLayout
            android:id="@+id/enemyEffectLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="250dp"
            android:clipChildren="false"
            android:clipToPadding="false" />
    </FrameLayout>

    <!-- SETTINGS BUTTON -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/b_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <!-- SKILL CONTAINER -->
    <LinearLayout
        android:id="@+id/skillContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bg_skills_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <!-- Reuse skill buttons (5 total) -->
        <LinearLayout
            android:id="@+id/skillRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgSkill1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImage"
                app:strokeColor="#FFD700"
                app:strokeWidth="2.5dp"
                android:src="@drawable/ic_warrior_skill_1"/>
            <Button
                android:id="@+id/skill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill 1"
                android:layout_marginRight="5sp"
                android:background="@drawable/bg_skill_button"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgSkill2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImage"
                app:strokeColor="#FFD700"
                app:strokeWidth="2.5dp"
                android:src="@drawable/ic_warrior_skill_1"/>
            <Button
                android:id="@+id/skill2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill 2"
                android:layout_marginRight="5sp"
                android:background="@drawable/bg_skill_button"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/skillRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgSkill3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImage"
                app:strokeColor="#FFD700"
                app:strokeWidth="2.5dp"
                android:src="@drawable/ic_warrior_skill_1"/>
            <Button
                android:id="@+id/skill3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill 3"
                android:layout_marginRight="5sp"
                android:background="@drawable/bg_skill_button"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgSkill4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImage"
                app:strokeColor="#FFD700"
                app:strokeWidth="2.5dp"
                android:src="@drawable/ic_warrior_skill_1"/>
            <Button
                android:id="@+id/skill4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill 4"
                android:layout_marginRight="5sp"
                android:background="@drawable/bg_skill_button"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/skillRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgSkill5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImage"
                app:strokeColor="#FFD700"
                app:strokeWidth="2.5dp"
                android:src="@drawable/ic_warrior_skill_1"/>
            <Button
                android:id="@+id/skill5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill 5"
                android:layout_marginRight="5sp"
                android:background="@drawable/bg_skill_button"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="OrangeButton">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <!-- Transparent background so we can control corners -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="RoundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- makes it a perfect circle -->
    </style>


</resources>